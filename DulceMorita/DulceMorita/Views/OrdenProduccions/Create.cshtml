            </div>
            <div class="form-group">
                <label asp-for="FkProducto" class="control-label form-label"></label>
                <select asp-for="FkProducto" class ="form-control" asp-items="ViewBag.FkProducto"></select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

